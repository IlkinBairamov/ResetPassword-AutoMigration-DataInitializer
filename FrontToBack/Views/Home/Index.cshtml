                            <div class="img">
                                <a href="">
                                    <img src="~/img/@item.Image" class="img-fluid" alt="">
                                </a>
                            </div>
                            <div class="title mt-3">
                                <h6>@item.Name</h6>
                            </div>
                            <div class="price">
                                <span class="text-black-50">Add to cart</span>
                                <span class="text-black-50">$@item.Price</span>
                            </div>
                        </div>
                    </div>
                }*@
        </div>
    </div>
</section>

<!-- PRODUCTS END -->
<!-- ABOUT START -->

<section id="about">
    <div class="container py-5">
        <div class="row py-5">
            <div class="col-lg-6">
                <div class="img">
                    <img src="~/img/@aboutSectionImages.Image" class="img-fluid" alt="">
                    <div class="player position-absolute rounded-circle d-flex align-items-center justify-content-center">
                        <i class="fas fa-play fa-lg"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-text mt-5 mt-lg-0 px-lg-5">
                    @Html.Raw(aboutSections.Title)
                    <p class="py-3">
                        @aboutSections.Subtitle
                    </p>
                    <ul class="list-unstyled">
                        @foreach (var item in aboutSectionLists)
                        {
                            <li class="mt-3">
                                <img src="~/img/@item.Image" class="mr-2" alt=""> @item.Text
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ABOUT END -->
<!-- EXPERTS START -->

<section id="experts">
    <div class="container">
        <div class="row py-5">
            <div class="offset-lg-3 col-lg-6">
                <div class="section-title">
                    <h1>@homeViewModel.ExpertSections.Title</h1>
                    <p class="text-black-50">
                        @homeViewModel.ExpertSections.Subtitle
                    </p>
                </div>
            </div>
        </div>
        <div class="row pb-5">
            @foreach (var item in homeViewModel.ExpertSectionLists)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="item text-center">
                        <div class="img">
                            <img src="~/img/@item.Image" class="img-fluid rounded-circle" alt="">
                        </div>
                        <div class="text mt-3">
                            <h6>@item.Title</h6>
                            <p class="text-black-50">@item.Subtitle</p>
                        </div>
                    </div>
                </div>
            }

            <div class="col-lg-3"></div>
            <div class="col-lg-3"></div>
            <div class="col-lg-3"></div>
        </div>
    </div>
</section>

<!-- EXPERTS END -->
<!-- SUBSCRIBE START -->

<section id="subscribe" style=" background: @homeViewModel.Subscribes.ImageLink;background-attachment:fixed;">
    <div class="container py-5">
        <div class="row py-5">
            <div class="col-12">
                <div class="content text-center py-5">
                    <h3>@homeViewModel.Subscribes.Title</h3>
                    <div class="form-group d-flex justify-content-center flex-wrap mt-5">
                        <input type="email" placeholder="Email Address" class="form-control-lg rounded-0">
                        <button class="btn btn-danger btn-lg rounded-0 px-5 mt-3 mt-sm-0">@homeViewModel.Subscribes.ButtonText</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- SUBSCRIBE END -->
<!-- BLOG START -->

<section id="blog">
    <div class="container">
        <div class="row py-5">
            <div class="offset-lg-3 col-lg-6">
                <div class="section-title">
                    <h1>@homeViewModel.Blogs.Title</h1>
                    <p class="text-black-50">
                        @homeViewModel.Blogs.Subtitle
                    </p>
                </div>
            </div>
        </div>
        <div class="row pb-5">
            @foreach (var item in homeViewModel.BlogLists)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="item">
                        <div class="img position-relative">
                            <img src="~/img/@item.Image" class="img-fluid" alt="">
                            <div class="date rounded bg-light position-absolute py-1 px-2">
                                <span>29.12.2019</span>
                            </div>
                        </div>
                        <div class="text mt-3 text-center px-5">
                            <h5>@item.Title</h5>
                            <p class="text-black-50">
                                @item.Subtitle
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- BLOG END -->
<!-- SAY START -->

<section id="say">
    <div class="container">
        <div class="row py-5 justify-content-center">

            <div class="col-md-8 col-xl-6">
                <div class="owl-carousel say">
                    @foreach (var item in homeViewModel.SliderSays)
                    {
                        <div>
                            <div class="item text-center">
                                <div class="img d-flex justify-content-center">
                                    <img src="~/img/@item.Image" alt="">
                                </div>
                                <div class="text text-muted pt-3 pb-5">
                                    <i>
                                        @item.Title
                                    </i>
                                </div>
                                <div class="author">
                                    <h6>@item.Subtitle</h6>
                                    <p class="text-black-50">@item.Text</p>
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</section>

<!-- SAY END -->
<!-- INSTAGRAM START -->

<section id="instagram">
    <div class="owl-carousel instagram">
        @foreach (var item in homeViewModel.Instagrams)
        {
            <div><img src="~/img/@item.Image" class="img-fluid" alt=""></div>
        }
    </div>
    <div class="hastag bg-light text-muted py-2 px-3">
        #FIORELLO
    </div>
</section>

<!-- INSTAGRAM END -->
