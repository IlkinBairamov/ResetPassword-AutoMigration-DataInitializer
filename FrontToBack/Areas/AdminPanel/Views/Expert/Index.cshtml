@model List<ExpertSectionList>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12">
    <div class="card mb-4">

        <div class="card-body">
            <h4 class="card-title">Experts</h4>
            <a class="btn btn-primary mb-3" asp-action="Create">Create</a>
            <div class="table-responsive">

                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Image</th>
                            <th scope="col">Action</th>
                      
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    <img src="~/img/@item.Image" style="width: 100px; height:100px;" />
                                </td>

                                <td>
                                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                    <a class="btn btn-danger"  asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

